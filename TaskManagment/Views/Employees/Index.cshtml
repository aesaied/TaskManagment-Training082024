
@{
    ViewData["Title"] = "Index";
}


<div class="card">
    <div class="card-header container-fluid">
        <div class="row">
            <div class="col-md-10">
                <h3 class="w-75 p-3">Task List</h3>
            </div>
            <div class="col-md-2 float-right">
                <a asp-action="Create" class="btn btn-primary">
                    Add
                </a>

            </div>
        </div>
    </div>
    <div class="card-body">

        <div class="table-responsive">

            <table class="table table-striped" id="tblEmployees">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Job title</th>
                        <th scope="col">Email</th>
                        <th scope="col">Assign date</th>
                        <th scope="col">Active</th>
                        <th scope="col">Phone number</th>
                        <th scope="col">Actions</th>



                    </tr>
                </thead>
            </table>

        </div>

    </div>
</div>

@section Scripts {

    <partial name="_datatablesScripts" />
    <script>
        var jsonDataUrl = 'api/employees';

    </script>
    <script src="~/js/pages/employees/index.js"></script>

}

@section Styles {

    <partial name="_datatablesStyles" />
}


